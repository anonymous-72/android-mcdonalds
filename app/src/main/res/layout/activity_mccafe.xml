                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_espresso_50_ml_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/espresso_50_ml"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonLatteMacchiato300Ml"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_latte_macchiato_300_ml_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/latte_macchiato_300_ml"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonThea200Ml"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_thea_200_ml_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/thea_200_ml"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonThea300Ml"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_thea_300_ml_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/thea_300_ml"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonTheaExclusiv300Ml"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_thea_exclusiv_300_ml_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/thea_exclusiv_300_ml"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonTheaExclusiv400Ml"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_thea_exclusiv_400_ml_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/thea_exclusiv_400_ml"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonVanillaDonut"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_vanilla_donut_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/vanilla_donut"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonCroissantWithChocolate"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_croissant_with_chocolate_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/croissant_with_chocolate"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttonCroissantWithButter"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_croissant_with_butter_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/croissant_with_butter"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonChocolateCookie"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/ic_chocolate_cookie_foreground"
                    android:fontFamily="@font/speedee"
                    android:text="@string/chocolate_cookie"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>